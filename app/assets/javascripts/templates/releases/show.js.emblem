.row
  .small-12.columns
    h2= release.artist
    h3= release.name
.row
  .small-4.columns
    =image-loader imageSrc=image.imagefile
  .small-8.columns
    h6= release.release_date
    h6= release.upc_ean
    h6= release.is_private

= each tracks
  .row.hover-row
    .small-12.columns
      h6= name

.row
  =link-to "releases.index"
    .button Back
  =link-to "releases.update" this
    .button.right Edit
